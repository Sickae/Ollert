@model BoardViewModel

<div class="row cardlist-list">
    <ul>
        @foreach (var cardList in Model.CardLists)
        {
            <li>
                <div class="cardlist">
                    <div class="cardlist-title">
                        @cardList.Name
                        <div class="cardlist-title-menu">
                            <a href="#">
                                <span class="fas fa-ellipsis-h"></span>
                            </a>
                        </div>
                    </div>

                    @foreach (var card in cardList.Cards)
                    {
                        <div class="cardlist-card">
                            <div class="cardlist-card-icon cardlist-card-icon-edit">
                                <a href="#test">
                                    <span class="fas fa-pencil-alt"></span>
                                </a>
                            </div>
                            @card.Name
                            @if (card.Comments.Count > 0)
                            {
                                <div class="cardlist-card-icon cardlist-card-icon-comment">
                                    <span class="fas fa-comment"></span>
                                    @card.Comments.Count
                                </div>
                            }
                        </div>
                    }
                </div>
                <a href="#">
                    <div class="cardlist-card-new">
                        <span class="fas fa-plus"></span>
                        Új kártya hozzáadása
                    </div>
                </a>
            </li>
        }
         @* TESZT *@
        <li>
            <div class="cardlist">
                <div class="cardlist-title">
                    DELETE THIS
                    <div class="cardlist-title-menu">
                        <a href="#">
                            <span class="fas fa-ellipsis-h"></span>
                        </a>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="cardlist-card-new">
                    <span class="fas fa-plus"></span>
                    Új kártya hozzáadása
                </div>
            </a>
        </li>
        @* TESZT *@

        <li>
            <div class="cardlist cardlist-new">
                <span class="fas fa-plus"></span>
                Új lista hozzáadása
            </div>
        </li>
    </ul>
</div>