@model CategoryListViewModel

@section Scripts {

    <script type="text/javascript" src="~/js/categoryFunctions.js"></script>

}

<div class="row board-list-container">
    <div class="board-list">
        @foreach (var category in Model.Categories.OrderBy(x => x.ModificationDate))
        {
            <div class="category user-select-none">
                <span class="fas fa-folder"></span>
                <input class="category-name" value="@category.Name" />
            </div>
            <ul>
                @foreach (var board in category.Boards)
                {
                    <li>
                        <div class="board-list-item user-select-none">
                            <a href="@Url.Action(nameof(BoardController.Board), "Board", new { id = board.Id })">
                                <div class="board-title">
                                    @board.Name
                                </div>
                            </a>
                        </div>
                    </li>
                }
                <li>
                    <div class="board-list-item board-list-item-new user-select-none">
                        <a href="@Url.Action(nameof(BoardController.New), "Board")">
                            <div class="board-title board-new">
                                Új tábla
                            </div>
                        </a>
                    </div>
                </li>
            </ul>
        }

        <a class="category category-new muted user-select-none">
            <span class="fas fa-plus"></span>
            Új kategória hozzáadása
        </a>
    </div>
</div>
